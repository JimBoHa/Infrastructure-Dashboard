[Unit]
Description=Farm Node Agent
After=network-online.target bluetooth.target node-forwarder.service
Wants=network-online.target bluetooth.target node-forwarder.service
StartLimitIntervalSec=300
StartLimitBurst=5

[Service]
Type=notify
EnvironmentFile=-/etc/node-agent.env
WorkingDirectory=/opt/node-agent
ExecStart=/usr/local/bin/node-agent-python -m uvicorn app.main:app --host 0.0.0.0 --port 9000
Restart=always
RestartSec=5
WatchdogSec=45s
User=farmnode
Group=farmnode

[Install]
WantedBy=multi-user.target
