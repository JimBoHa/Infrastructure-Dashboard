# Environment overrides for the Farm Node Agent service.
# Copy to /etc/node-agent.env and adjust per device.

NODE_NODE_ID=pi-node-001
NODE_NODE_NAME="Field Node 001"
NODE_MQTT_URL=mqtt://core.local:1883
NODE_MQTT_USERNAME=
NODE_MQTT_PASSWORD=
NODE_HEARTBEAT_INTERVAL_SECONDS=5.0
NODE_TELEMETRY_INTERVAL_SECONDS=30.0
NODE_LOG_LEVEL=INFO
NODE_OTEL_ENABLED=false
NODE_OTEL_EXPORTER_OTLP_ENDPOINT=http://127.0.0.1:4317
# NODE_OTEL_EXPORTER_OTLP_HEADERS=authorization=Bearer your-token
# NODE_OTEL_SAMPLE_RATIO=1.0

# Backup verification (used by node-agent-verify-backups)
NODE_AGENT_BACKUP_ROOT=/opt/node-agent/storage/backups
NODE_AGENT_BACKUP_MAX_AGE_HOURS=36

# Log rotation (used by node-agent-logrotate)
NODE_AGENT_LOGROTATE_CONFIG=/etc/logrotate.d/node-agent
NODE_AGENT_LOGROTATE_STATE=/var/lib/logrotate/status-node-agent
NODE_AGENT_JOURNAL_UNIT=node-agent.service
NODE_AGENT_JOURNAL_VACUUM_DAYS=14
